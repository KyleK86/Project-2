<!-- Placeholder navbar -->
<nav class="navbar navbar-light bg-light mb-4">
    <span class="navbar-brand mb-0 h1">Killer Mutant Robogotchis!!!!</span>
    <span><a id="logout" href="/logout">Logout</a></span>
</nav>

<div class="container">
    <!-- your character card -->
    <div class="row">
        <div class="card col-5 border-0">
            <div class="card-body character-card">
                <h5 class="card-title text-center">Your 'Gotchi</h5>
                <h4>Your Gotchi: </h4>
                <span>{{gotchiName}}</span>
                <!-- this will be the image of the character chosen by user -->
                <div class="text-center mb-3" style="height: 250px">
                    <img src="{{gotchiPicture}}" class="img-fluid rounded" id="gotchi-img">
                </div>
            </div>
        </div>

        <!-- stats card -->
        <div class="card col-5 border-0">
            <div class="card-body stat-card">
                <h5 class="card-title text-center">What would you like to do with your Robot?</h5>
                <div class="list-group">
                    <button type="button" class="list-group-item list-group-item-action" id="feedBtn"
                        data-toggle="modal" data-target="#modal">Feed</button>
                    <button type="button" class="list-group-item list-group-item-action" id="entertainBtn"
                        data-toggle="modal" data-target="#modal2">Entertain</button>
                    <button type="button" class="list-group-item list-group-item-action" id="exerciseBtn"
                        data-toggle="modal" data-target="#modal3">Exercise</button>


                </div>
            </div>
        </div>

        <!-- food modal -->
        <div class="modal" id="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Your Food Supply</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has {{hungry}} food points</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- entertain modal -->
        <div class="modal" id="modal2" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">How bored is your Gotchi?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has {{bored}} entertainment points</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- exercise modal -->
              <div class="modal" id="modal3" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Keeping your Gotchi fit!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has {{lazy}} exercise points</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>