

{{!-- Navbar Start --}}
<nav class="navbar mb-4">
    <img class="navbar-logo" src="/images/logo.png" alt="Robogotchi Logo">
    <span class="navbar-brand">Killer Mutant Robogotchis!!!!</span>
    <a id="logout" href="/logout">Logout</a>
</nav>
{{!-- Navbar End --}}

<div class="container">
    <div class="row">

        {{!-- Character Card Start--}}
        <div class="card col-5 border-0">
            <div class="card-body">
                <h3 class="card-title text-center">Your 'Gotchi</h3>
                <div id="user-gotchi">{{dataValues.gotchiName}}</div>
                <div class="text-center mb-3">
                    <img src="{{dataValues.gotchiPicture}}" class="img-fluid rounded" id="gotchi-img">
                </div>
            </div>
        </div>
        {{!-- Character Card End--}}


        {{!-- Stats Card Start --}}
        <div class="card col-6 border-0 ml-auto">
            <div class="card-body">
                <h5 class="card-title text-center">What would you like to do with your Gotchi?</h5>
                <div class="list-group mt-5">
                    <button data-health="{{dataValues.health}}" data-points="{{dataValues.hungry}}" data-id="{{dataValues.id}}" name="hungry" value=5 type="button"
                    class="list-group-item list-group-item-action action-btn" id="feedBtn" data-toggle="modal"
                        data-target="#modal">Food Supply</button>
                    <button data-health="{{dataValues.health}}" data-points="{{dataValues.bored}}" data-id="{{dataValues.id}}" name="bored" value=15 type="button"
                        class="list-group-item list-group-item-action action-btn" id="entertainBtn" data-toggle="modal"
                        data-target="#modal2">Entertain</button>
                    <button data-health="{{dataValues.health}}" data-points="{{dataValues.lazy}}" data-id="{{dataValues.id}}" name="lazy" value=20 type="button"
                        class="list-group-item list-group-item-action action-btn" id="exerciseBtn" data-toggle="modal"
                        data-target="#modal3">Exercise</button>
                </div>
            </div>
        </div>
        {{!-- Stats Card End --}}


        {{!-- Food Modal Start --}}
        <div class="modal" id="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Your Food Supply</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has <span id="hungry-points">{{dataValues.hungry}}</span> food remaining</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Food Modal End --}}

        {{!-- Entertainment Modal Start --}}
        <div class="modal" id="modal2" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">How bored is your Gotchi?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has <span id="bored-points">{{dataValues.bored}}</span> entertainment points</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Entertainment Modal End --}}


        {{!-- Exercise Modal Start --}}
        <div class="modal" id="modal3" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Keeping your Gotchi fit!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your Gotchi has <span id="lazy-points">{{dataValues.lazy}}</span> exercise points</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Exercise Modal End --}}

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/index.js"></script>

